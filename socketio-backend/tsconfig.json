{
  "compilerOptions": {
    "rootDirs": ["./src"],
    "outDir": "./dist",
    //Reference from : 
    //https://github.com/tsconfig/bases/blob/main/bases/node20.json
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16"
  }
}